<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Task 3</title>
    <style type="text/css">
        body {
            background-color: #ccc;
            margin: 0;
        }

        .main_content {
            background-color: #fff;
            max-width: 960px;
            margin: 10px auto;
        }
        header {
            background-color: #fff;
            height: 42px;
            padding: 10px 0;
            margin-bottom: 20px;
        }

        #header_content {
            display: flex;
            min-height: 42px;
            width: 960px;
            margin: 0 auto;
            font-family: "Droid Sans Mono", sans-serif;
        }

        #login_name {
            flex: 1;
            justify-content: center;
            padding-top: 8px;
            font-size: 16px;
        }

        #title {
            flex: 5;
            font-size: 28px;
            text-align: center;
        }

        #log_btn {
            flex: 1;
            text-align: end;
            justify-content: center;
            padding-top: 8px;
            font-size: 16px;
        }

        #table_title h3 {
            flex: 1;
        }

        #table_body {

            width: 930px;
            margin: 0 auto;
            padding: 15px 0;


        }
        th, td {
            background-color: lightgrey;
            padding: 5px;
        }
        #del_forms_btn {
            text-align: center;
            margin: 0 auto;
            padding: 10px;
        }
    </style>
</head>
<body>
<header>
    <div id="header_content">
        <div id="login_name">{{ admin }}</div>
        <div id="title">Admin Page</div>
        <div id="log_btn">
            <a href="/task3/">Выход</a>
        </div>
    </div>
</header>
    <div class="main_content">
        <table id="table_body">
            <tr>
                <th>№</th>
                <th>Name</th>
                <th>Email</th>
                <th>Year</th>
                <th>Gender</th>
                <th>Limbs</th>
                <th>SP</th>
                <th>Bio</th>
                <th>Delete</th>
            </tr>
            {% for form in forms %}
                <tr>
                    <td style="text-align: center"> {{ loop.index }}</td>
                    <td>{{ form.name }}</td>
                    <td>{{ form.email }}</td>
                    <td>{{ form.year }}</td>
                    <td>{{ form.gender }}</td>
                    <td>{{ form.limbs }}</td>
                    <td>{{ form.superpowers }}</td>
                    <td>{{ form.biography }}</td>
                    <td style="text-align: center">
                        <input type="button" onclick="location.href='/task3/del_form/{{ form.id }}'" value="del">
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div id="del_forms_btn">
            <input type="button" onclick="location.href='/task3/del_form/0'" value="Удалить всё">
        </div>
    </div>
</body>
